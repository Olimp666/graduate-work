\newcommand{\uline}[1]{\underline{#1\vphantom{lp}}}

\newcommand{\lastyeardigits}{\the\numexpr\year-2000\relax}
\newcommand{\currentmonth}{
	\ifcase\month
	\or января
	\or февраля
	\or марта
	\or апреля
	\or мая
	\or июня
	\or июля
	\or августа
	\or сентября
	\or октября
	\or ноября
	\or декабря
	\fi
}

\newlength{\currentmonthwidth}
\settowidth{\currentmonthwidth}{\currentmonth}

\newlength{\currentdaywidth}
\settowidth{\currentdaywidth}{\the\day}

\newlength{\currentyearwidth}
\settowidth{\currentyearwidth}{\lastyeardigits}

\newlength{\hwmonth}
\setlength{\hwmonth}{ (80pt - \currentmonthwidth) / 2}

\newlength{\hwday}
\setlength{\hwday}{ (30pt - \currentdaywidth) / 2}

\newlength{\hwyear}
\setlength{\hwyear}{ (20pt - \currentyearwidth) / 2}

\newcommand{\docdate}{
	<<\uline{\hspace{\hwday}\the\day\hspace{\hwday}}>>\uline{\hspace{\hwmonth}\currentmonth\hspace{\hwmonth}} 20\uline{\hspace{\hwyear}\lastyeardigits\hspace{\hwyear}} г.
}

\newcommand{\textunderset}[2]{\begin{tabular}[t]{@{}c@{}}#2\\[-12pt]\scriptsize#1\end{tabular}}

\newcommand{\usersign}[1]{
    \textunderset{\textit{Ф.И.О}}{\uline{#1}}
    \textunderset{\textit{подпись}}{\uline{\hspace{80pt}}}
}

